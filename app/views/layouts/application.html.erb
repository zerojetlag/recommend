<!DOCTYPE html>
<html>
<head>
  <title>GDUFS</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <nav class="navbar navbar-default" role="navigation">
      <div class="row">
        <div class="col-md-8" style='padding-top: 15px;padding-left: 30px;'><i class="fa fa-thumbs-up"></i>GDUFS</div>
        <div class="col-md-4">
          <%= form_tag(recommend_path, class: "navbar-form navbar-left", method: 'get', role: "search", id: "search") do %>
           <!--  <form class="navbar-form navbar-left" role="search"> -->
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" name="id">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            <!-- </form> -->
            <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>

  </div>
</body>
</html>
